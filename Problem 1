#include <iostream>
using namespace std;

void getElementsThenEvaluate(int arr[]){
  int large, small;
  double sum = 0.0, avg;
  large = small = arr[0];

  for (int i=0; i<10; i++){
    if(arr[i] > large){
        large = arr[i];
    }
  }

  for (int i=0; i<10; i++){
    if(arr[i] < small){
      small = arr[i];
    }
  }

  for (int i=0; i<10; i++){
    sum += arr[i];
  }

  avg = sum / 10;

  cout<<endl;
  cout<<"The smallest integer is "<< small << endl;
  cout<<"The largest integer is "<< large << endl << endl;
  cout<<"Total: "<< sum << endl;
  cout<<"Average: "<< avg << endl;
}

int main() {
  int elem[10];
  for (int i=0; i<10; i++){
      cout<<"Please enter a number: ";
      cin>>elem[i];
  } 

  getElementsThenEvaluate(elem);
  
}
